 pipeline {
    agent any
    
    environment {
    AWS_DEFAULT_REGION = 'ap-southeast-2'
    ECR_REPOSITORY = 'node-app'
    IMAGE_TAG = 'latest'
    ECR_REGISTRY = credentials ('ECR_REGISTRY') 
   }

    stages {
        stage('Checkout') {
            steps {
                checkout([$class: 'GitSCM', branches: [[name: '*/Do-06-Hang']], userRemoteConfigs: [[url: 'https://github.com/hangzh521/FotoPie-Front-end.git']]])
            }
         }
        stage('Build Docker Image') {
            environment {
                BACKEND_API = credentials('BACKEND_API')
                BACKEND_PORT = credentials('BACKEND_PORT')
            }
         
            steps {
              sh 'docker build --build-arg BACKEND_API=$BACKEND_API --build-arg BACKEND_PORT=$BACKEND_PORT -t $ECR_REGISTRY/$ECR_REPOSITORY:$IMAGE_TAG .'
            }
         }
        
        stage('Set Environment Variables') {
           steps {
              script {
            env.GITHUB_SHA = sh(returnStdout: true, script: 'git rev-parse HEAD').trim()
          }
       }
    }

        stage('Push Docker Image to ECR') {
            environment {
                AWS_ACCESS_KEY_ID = credentials('AWS_ACCESS_KEY_ID')
                AWS_SECRET_ACCESS_KEY = credentials('AWS_SECRET_ACCESS_KEY')
            }
           steps {
               sh 'aws ecr get-login-password --region ap-southeast-2 | docker login --username AWS --password-stdin $ECR_REGISTRY'
               sh "docker tag node-app:latest 271584491311.dkr.ecr.ap-southeast-2.amazonaws.com/node-app:$GITHUB_SHA"
               sh "docker push 271584491311.dkr.ecr.ap-southeast-2.amazonaws.com/node-app:latest"
             }
           }
         }
      }
     
        


// sh 'docker tag $ECR_REPOSITORY:$IMAGE_TAG $ECR_REGISTRY/$ECR_REPOSITORY:$IMAGE_TAG'
